{
    "name": "@nlib/test",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.18.5",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/test",
    "repository": "https://github.com/nlibjs/test",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": "./esm/index.js",
    "exports": {
        "import": "./esm/index.js",
        "require": "./cjs/index.cjs"
    },
    "files": [
        "esm",
        "cjs",
        "!*.test.*"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:index": "indexen --input src --output src/index.ts",
        "build:esm": "run-s build:esm:*",
        "build:esm:tsc": "tsc",
        "build:esm:rename": "replace-ext --directory esm --entry js/mjs",
        "build:esm:resolve": "resolve-imports --directory esm --ext mjs",
        "build:cjs": "run-s build:cjs:*",
        "build:cjs:tsc": "tsc --project tsconfig.cjs.json",
        "build:cjs:rename": "replace-ext --directory cjs --entry js/cjs",
        "build:cjs:resolve": "resolve-imports --directory cjs --ext cjs --cjs",
        "test": "run-s build test:*",
        "test:type": "tsc --noEmit",
        "test:cjs": "ava './cjs/**/*.test.cjs'",
        "test:esm": "ava './esm/**/*.test.mjs'",
        "lint": "eslint --ext .ts --ext .js src",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack": "rimraf 'lib/**/*.test.*'"
    },
    "peerDependencies": {
        "ava": ">= 3"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/eslint-config": "^3.17.11",
        "@nlib/nodetool": "^0.1.8",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "ava": "^3.12.1",
        "conventional-changelog-cli": "^2.1.0",
        "eslint": "^7.8.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.3.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.2"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "src/testFunction.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@nlib/eslint-config/commitlint.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
